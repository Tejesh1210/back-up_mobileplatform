<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Smart Home Controller"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <Button
            android:id="@+id/btn_light_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Control"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_thermostat_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thermostat Control"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_security_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Control"
            android:layout_margin="10dp"/>


    </LinearLayout>
</RelativeLayout>
